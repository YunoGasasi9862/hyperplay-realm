@model UserDTO

@{
    var containerDivClass = "container";
}
<!-- put animation or a good image in the background!!! -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body class="bg-gradient" style="background: linear-gradient(45deg, #6a0dad, #9b4fd7, #d6aefc, #f3c6f8); background-size: 400% 400%; animation: gradientBackground 15s ease infinite; height: 100vh;">

    <!-- Full Height Flexbox Container to center content -->
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top: -100px;">

        <!-- Card for Login Form -->
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>

                @if (TempData["Message"] != null)
                {
                    <p class="text-danger text-center">
                        @TempData["Message"]
                    </p>
                }

                <form asp-action="Login" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Username Input -->
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">Login</button>

                    <!-- Reset Button -->
                    <button type="reset" class="btn btn-outline-primary w-100 mt-3">Reset</button>
                </form>

                <div class="text-center mt-3">
                    <a asp-controller="Users" asp-action="Create" class="text-decoration-none">Register</a> |
                    <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional, for any additional functionality like tooltips, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
