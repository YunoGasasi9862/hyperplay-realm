@model UserDTO

@{
    var containerDivClass = "container my-5";
    var formGroupClass = "form-group mb-3";
    var labelClass = "form-label fw-bold";
    var inputClass = "form-control shadow-sm";
    var validationClass = "text-danger";
    var btnPrimaryClass = "btn btn-primary btn-lg px-5";
    var btnOutlineClass = "btn btn-outline-secondary btn-lg px-5";
}

<style>
    body {
        background-image: url('@Url.Content("~/images/Witcher.jpg")'), linear-gradient(45deg, #6a0dad, #9b4fd7, #d6aefc, #f3c6f8);
        background-size: cover, 400% 400%;
        background-position: center center;
        animation: backgroundMove 15s ease-in-out infinite, backgroundZoom 20s infinite alternate;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        height: 100vh;
    }

    /* Inner card styling */
    .card {
        background: linear-gradient(45deg, rgba(30, 60, 114, 0.8), rgba(42, 82, 152, 0.8)); /* Background applied here */
        color: white;
        border: none;
        border-radius: 15px;
    }

    .card-body {
        background: rgba(0, 0, 0, 0.8);
        border-radius: 15px;
        padding: 2rem;
    }

    .btn-primary {
        background: linear-gradient(45deg, #1e3c72, #2a5298);
        border: none;
    }

    .btn-outline-primary {
        border: 2px solid #2a5298;
        color: #2a5298;
    }

    .text-danger {
        color: #ff5252;
    }

    .text-center a {
        color: #fff;
        text-decoration: none;
    }

        .text-center a:hover {
            color: #2a5298;
        }

    .btn-gradient {
        background: linear-gradient(45deg, #1e3c72, #2a5298);
        border: none;
        color: white;
        font-weight: bold;
        transition: background 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #2a5298, #1e3c72);
        }

        .btn-gradient, .btn-gradient:hover {
            color: white;
        }
    /* Center the form */
    .outer-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Ensure the container takes full height */
    }

    .card {
        width: 100%;
        max-width: 500px; /* Control the maximum width of the card */
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Outer container div with transparent background -->
    <div class="outer-container">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>

                @if (TempData["Message"] != null)
                {
                    <p class="text-danger text-center">
                        @TempData["Message"]
                    </p>
                }

                <form asp-action="Login" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Username Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label fw-bold">Username</label>
                        <input asp-for="Username" class="form-control shadow-sm" placeholder="Enter your username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control shadow-sm" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="form-group mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-gradient text-white w-100">Login</button>

                    <!-- Reset Button -->
                    <button type="reset" class="btn btn-outline-secondary text-white w-100 mt-3">Reset</button>
                </form>

                <div class="text-center mt-3">
                    <a asp-controller="Users" asp-action="Create" class="text-decoration-none">Register</a> |
                    <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
