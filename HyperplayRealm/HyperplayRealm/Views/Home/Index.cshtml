@model AppSettings

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container py-5">
    <div class="jumbotron bg-dark text-white text-center p-5">
        <h1 class="display-4">Welcome to @Model.Title</h1>
        <p class="lead">@Model.Description</p>
        <a class="btn btn-primary btn-lg mt-3" href="/Store" role="button">Browse Games</a>
    </div>
</div>

<!-- Featured Games Section -->
<div class="container">
    <h2 class="text-center my-4">Featured Games</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/wwwroot/img/game1.jpg" class="card-img-top" alt="Game 1">
                <div class="card-body">
                    <h5 class="card-title">Game Title 1</h5>
                    <p class="card-text">Immerse yourself in an epic adventure like never before.</p>
                    <a href="/Game/1" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/wwwroot/img/game2.jpg" class="card-img-top" alt="Game 2">
                <div class="card-body">
                    <h5 class="card-title">Game Title 2</h5>
                    <p class="card-text">Challenge your skills in this exciting strategy game.</p>
                    <a href="/Game/2" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/wwwroot/img/game3.jpg" class="card-img-top" alt="Game 3">
                <div class="card-body">
                    <h5 class="card-title">Game Title 3</h5>
                    <p class="card-text">Explore a vibrant world full of mystery and excitement.</p>
                    <a href="/Game/3" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="~/wwwroot/img/about.jpg" class="img-fluid rounded" alt="About Us">
        </div>
        <div class="col-md-6">
            <h2>About @Model.Title</h2>
            <p>
                We are your ultimate destination for gaming. Whether you're a casual gamer or a hardcore enthusiast, our store
                offers a curated selection of the best titles. Join us to embark on unforgettable gaming journeys!
            </p>
            <a href="/About" class="btn btn-primary">Learn More</a>
        </div>
    </div>
</div>