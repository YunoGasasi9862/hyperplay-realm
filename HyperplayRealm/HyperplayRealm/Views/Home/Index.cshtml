@model AppSettings

@{
    ViewData["Title"] = "Home Page";
}

<!-- Background Image -->
<style>
    body {
        background-image: url('@Url.Content("~/images/BG.jpg")');
        background-size: cover;
        background-position: center center;
        animation: backgroundMove 15s ease-in-out infinite, backgroundZoom 20s infinite alternate;
        background-attachment: fixed; /* Keeps the background fixed while scrolling */
        margin: 0;
        padding: 0;
    }

    /* Optional: Adjust hero section to ensure text stays readable */
    .hero-section {
        background-color: rgba(0, 0, 0, 0.6); /* Dark overlay for better text visibility */
        padding: 5rem 0;
    }

    /* Gradient Button Styling */
    .btn-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc); /* Gradient color */
        color: #fff;
        border: none;
        font-weight: bold;
        border-radius: 50px; /* Rounded button */
        padding: 10px 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-gradient:hover {
        transform: scale(1.1); /* Slight zoom effect */
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3); /* More prominent shadow */
        background: linear-gradient(90deg, #2575fc, #6a11cb); /* Reverse gradient on hover */
    }

    .btn-gradient:active {
        transform: scale(1); /* Restore size when clicked */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Featured Games Card Styling */
    .card {
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        background-color: #fff; /* Card background color */
    }

    .card-img-top {
        border-radius: 15px 15px 0 0; /* Rounded top corners for the image */
        object-fit: cover; /* Ensure the image fills the container */
        height: 200px; /* Fixed height for image */
    }

    .card-body {
        padding: 1.5rem; /* Spacing inside the card */
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d; /* Muted text color */
    }
</style>

<!-- Hero Section -->
<div class="container py-5 hero-section">
    <div class="jumbotron text-white text-center p-5">
        <h1 class="display-4">Welcome to @Model.Title</h1>
        <p class="lead">@Model.Description</p>
        <a class="btn btn-lg mt-3 btn btn-lg btn-gradient"
           asp-action="Index"
           asp-controller="Games"
           role="button">Browse Games</a>
    </div>
</div>

<!-- Featured Games Section -->
<div class="container my-5">
    <h2 class="text-center my-4 text-white">Featured Games</h2>
    <div class="row">
        <!-- Game 1 Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-lg h-100">
                <img src="~/images/logo.jpg" class="card-img-top rounded" alt="Game 1">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title text-center text-dark font-weight-bold">Assassin's Creed</h5>
                    <p class="card-text text-center text-muted">Immerse yourself in an epic adventure like never before.</p>
                    <a href="/Game/1" class="btn btn-gradient text-white w-100 mt-auto">View Details</a>
                </div>
            </div>
        </div>

        <!-- Game 2 Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-lg h-100">
                <img src="~/images/logo.jpg" class="card-img-top rounded" alt="Game 2">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title text-center text-dark font-weight-bold">Tomb Raider</h5>
                    <p class="card-text text-center text-muted">Challenge your skills in this exciting strategy game.</p>
                    <a href="/Game/2" class="btn btn-gradient text-white w-100 mt-auto">View Details</a>
                </div>
            </div>
        </div>

        <!-- Game 3 Card (Optional) -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-lg h-100">
                <img src="~/images/logo.jpg" class="card-img-top rounded" alt="Game 3">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title text-center text-dark font-weight-bold">Game Title</h5>
                    <p class="card-text text-center text-muted">Game Description Here</p>
                    <a href="/Game/3" class="btn btn-gradient text-white w-100 mt-auto">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- About Section -->
<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <!-- Bootstrap classes for centering -->
        <div class="col-md-6 text-center">
            <!-- Center content with Bootstrap classes -->
            <h2 class="text-white">About @Model.Title</h2>
            <p class="text-white">
                We are your ultimate destination for gaming. Whether you're a casual gamer or a hardcore enthusiast, our store
                offers a curated selection of the best titles. Join us to embark on unforgettable gaming journeys!
            </p>
            <a href="" class="btn btn-lg btn-gradient mb-4">Learn More</a> <!-- Using Bootstrap's btn and custom gradient class -->
        </div>
    </div>
</div>