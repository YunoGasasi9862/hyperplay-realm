@model GameDTO

@* Generated from Custom Template *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var dateTimePickerClass = "datetimepicker";
    var containerDivClass = "container py-4";
    var formRowClass = "row align-items-center mb-4";
    var formLabelClass = "col-3 col-form-label text-white fw-bold text-end";
    var formInputDivClass = "col-9";
    var pageTitle = "Create Game - Game Store";
    ViewData["Title"] = pageTitle;
}

<div class="bg-dark text-white py-5 text-center shadow-lg">
    <h1 class="display-4">@pageTitle</h1>
    <p class="lead">Create a new game entry for your store</p>
</div>

<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Create" autocomplete="off" class="bg-dark text-white p-5 rounded shadow">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <div class="@formRowClass">
            <label asp-for="Title" class="@formLabelClass"></label>
            <div class="@formInputDivClass">
                <input asp-for="Title" class="form-control bg-secondary text-white border-0 shadow-sm" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="Price" class="@formLabelClass"></label>
            <div class="@formInputDivClass">
                <input asp-for="Price" class="form-control bg-secondary text-white border-0 shadow-sm" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="Quantity" class="@formLabelClass"></label>
            <div class="@formInputDivClass">
                <input asp-for="Quantity" class="form-control bg-secondary text-white border-0 shadow-sm" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="PublisherName" class="@formLabelClass">Publisher</label>
            <div class="@formInputDivClass">
                <select asp-for="MapTo().PublisherId" class="form-select bg-secondary text-white border-0 shadow-sm" asp-items="ViewBag.PublisherId">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="MapTo().PublisherId" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="ReleaseDate" class="@formLabelClass">Release Date</label>
            <div class="@formInputDivClass">
                <input asp-for="ReleaseDate" class="form-control bg-secondary text-white border-0 shadow-sm @dateTimePickerClass" type="text" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="GenreIds" class="@formLabelClass">Genres</label>
            <div class="@formInputDivClass">
                <select multiple asp-for="GenreIds" class="form-select bg-secondary text-white border-0 shadow-sm" asp-items="ViewBag.GenreIds"></select>
                <span asp-validation-for="GenreIds" class="text-danger"></span>
            </div>
        </div>

        <div class="@formRowClass">
            <label asp-for="DeveloperIds" class="@formLabelClass">Developers</label>
            <div class="@formInputDivClass">
                <select multiple asp-for="DeveloperIds" class="form-select bg-secondary text-white border-0 shadow-sm" asp-items="ViewBag.DeveloperIds"></select>
                <span asp-validation-for="DeveloperIds" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-success btn-lg shadow">Save</button>
            <button type="reset" class="btn btn-outline-light btn-lg ms-3">Reset</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DateTimePicker" />
}
